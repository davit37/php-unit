{
    "name": "davit37/php-unit",
    "description": "php unit",
    "type": "project",
    "autoload": {
        "psr-4": {
            "Davit37\\PhpUnit\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Davit37\\PhpUnit\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "davit hermansyah",
            "email": "davithermansyah37@gmail.com"
        }
    ],
    "require": {
        "php":"8.0",
        "phpunit/phpunit": "9.5.*"
    },
    "scripts": {
        "test": "phpunit --configuration phpunit.xml",
        "test:product": "phpunit --configuration phpunit.xml --testsuite product",
        "test:counter": "phpunit --configuration phpunit.xml --testsuite counter"
    }
}
